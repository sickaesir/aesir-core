<Page
    x:Class="AesirLightsUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AesirLightsUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="400" Height="675">

    <Grid Margin="0,10,10,-10">
        <ComboBox Name="EffectType" Margin="0,10,0,0" Width="120" HorizontalAlignment="Center" SelectedIndex="0" RenderTransformOrigin="0.472,-2.479">
            <x:String>Music</x:String>
            <x:String>Static</x:String>
        </ComboBox>
        <ColorPicker HorizontalAlignment="Center" VerticalAlignment="Center" ColorChanged="OnColorChange" x:Name="ColorPicker"/>

    </Grid>
</Page>
